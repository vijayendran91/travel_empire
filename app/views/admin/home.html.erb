<script type="text/javascript" src="/data/ad_pwd.json"></script>
<%= javascript_pack_tag 'admin/home'%>
<div id="admin_container">
  <div id="xlsx">
    <h1>Business - By Month</h1>
    <%= form_for(@trips,:url => chennai106_path(:format=>:xlsx), :method => :post) do |f| %>
      <div class="form-row mt-4">
        <div class="form-group col-md-6">
          <label class="form-label" for="firstName">First Name</label>
          <%=f.text_field :start_date, :class=>'form-control', :id=>'firstName', :placeholder=>'First Name'%>
        </div>
        <div class="form-group col-md-6">
          <label class="form-label" for="lastName">Last Name</label>
          <%=f.text_field :end_date, :class=>'form-control', :id=>'lastName', :placeholder=>'Last Name'%>
        </div>
        <div class="form-group col-md-6">
          <%=f.submit "Download Excel",:class=>"btn ml-3 green-btn form-submit", :id=>"bookRide"%>
        </div>
      </div>
    <% end %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Pick Up Location</th>
        <th scope="col">Pick Up Date and Time</th>
        <th scope="col">Drop Location</th>
        <th scope="col">Drop Time</th>
      </tr>
    </thead>
    <tbody>
      <%(0..@trips.length()-1).each do |i|%>
        <tr>
          <th scope="row"><%=i+1%></th>
          <td><%=@trips[i].fname%></td>
          <td><%=@trips[i].pul%></td>
          <td><%=@trips[i][:put].strftime("Pickup on %a %d-%m-%y  %l:%M:%p")%></td>
          <td><%=@trips[i].drl%></td>
          <td><%=@trips[i][:drt].strftime("Drop on %a %d-%m-%y  %l:%M:%p")%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
