<div class="fromAndToLocation">
  <div class="form-row mt-2">
    <div class="form-group col-md-6 ">
      <label class="mr-sm-2" for="inlineFormCustomSelect">Type of your trip</label>
      <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
        <option selected>Choose...</option>
        <option value="ow">One Way</option>
        <option value="rt">Return Trip</option>
        <option value="rtt">Round Trip</option>
        <option value="my">Multi Way</option>
        <option value="hy">Hourly</option>
      </select>
    </div>
    <div class="form-group col-md-3">
      <div class="form-outline">
        <label class="form-label" for="typeNumber">Adult</label>
        <input type="number" id="typeNumber" class="form-control" />
      </div>
    </div>
    <div class="form-group col-md-3">
      <div class="form-outline">
        <label class="form-label" for="typeNumber">Children</label>
        <input type="number" id="typeNumber" class="form-control" />
      </div>
    </div>
  </div>
  <div class="form-row mt-8">
    <div class="form-group col">
      <%= text_field_tag :fromLocation, nil, autocomplete: :off, class: "form-control search-input", placeholder: "From" %>
    </div>
  </div>
  <center>
    <button type="button" id="locationSwap" class="btn btn-primary mb-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-up" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M11.5 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L11 2.707V14.5a.5.5 0 0 0 .5.5zm-7-14a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L4 13.293V1.5a.5.5 0 0 1 .5-.5z"></path>
      </svg>
    </button>
  </center>
  <div class="form-row mt-2">
    <div class="form-group col">
      <%= text_field_tag :toLocation, nil, autocomplete: :off, class: "form-control search-input", placeholder: "To" %>
    </div>
  </div>
</div>

