<div id="personalDets">
  <h3>Personal Details
  </h3>
  <div class="form-row mt-4">
      <div class="form-group col-md-6">
      <label class="form-label" for="firstName">First Name</label>
      <%=f.text_field :fname, :class=>'form-control', :id=>'firstName', :placeholder=>'First Name'%>
    </div>
    <div class="form-group col-md-6">
      <label class="form-label" for="lastName">Last Name</label>
      <%=f.text_field :lname, :class=>'form-control', :id=>'lastName', :placeholder=>'Last Name'%>
    </div>
  </div>
  <div class="form-row">
      <div class="form-group col-md-6">
      <label class="form-label" for="phone"><%=image_tag("whatsapp_logo.png",:class=>"whatsapp_logo")%>Whatsapp Phone Number</label>
      <%=f.telephone_field :phone, :id=>"phone", :class=>'form-control', :placeholder=>'123-45-678', :pattern=>"[0-9]{3}{10}", :required => true%>
    </div>
    <div class="form-group col-md-6 emailCont">
        <label class="form-label" for="Email">Email</label>
        <%=f.email_field :email, :class=>'form-control', :id=>'email', :placeholder=> 'john@msn.in'%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group">
      <label class="form-label ml-2">Aadhaar Copies</label>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <div class="custom-file">
        <%=f.file_field :photoproof1, :class=>'custom-file-input green-btn', :id=>'aadhaarFront'%>
        <label class="custom-file-label" for="customFile">Aadhaar Front Copy</label>
      </div>
    </div>
    <div class="form-group col-md-6">
        <div class="custom-file">
        <%=f.file_field :photoproof2, :class=>'custom-file-input green-btn', :id=>'aadhaarRear'%>
        <label class="custom-file-label" for="aadhaarRear">Aadhaar Rear Copy</label>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label class="form-label" id="gstLabel" for="gst">GSTIN</label>
      <%=f.text_field :gst, :id=>'gst', :class=> 'form-control', :placeholder=>'1A2C..'%>
    </div>
  </div>
</div>
